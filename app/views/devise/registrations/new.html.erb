<div class="main">
  <div class="user-main">
    <div class= "user-title">
      <h2>新規登録</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autocomplete: "new-password",class: "input" %>
      </div>

      <div class="field">
        <%= f.label :年齢 %><br />
        <%= f.text_field :age, autocomplete: "new-password",class: "input" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "input" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "input" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :自己紹介 %><br />
        <%= f.text_area :self_introduction, autocomplete: "new-password",class: "input-self" %>
      </div>



      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
